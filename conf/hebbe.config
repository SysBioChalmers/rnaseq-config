//Profile config names for nf-core/configs
params {
  config_profile_description = 'Gothenburg Hebbe cluster profile provided by nf-core/configs.'
  config_profile_contact = 'Mihail Anton (@mihai-sysbio)'
  config_profile_url = 'http://www.c3se.chalmers.se/index.php/Hebbe'
}

singularity {
  enabled = true
}

process {
  executor = 'slurm'
  clusterOptions = { "-A $params.project ${params.clusterOptions ?: ''}" }

  /* The Hebbe scheduler fails if you try to request an amount of memory for a job */
  /* The line below still fails with the latest nextflow */
  /* withName: '*' { memory = null } */

  memory = null
  withName:markDuplicates {
    /* cpus = 4 */
    /* Fails if memory is null */
    memory = 3.GB
  }
}

params {
  igenomesIgnore = true
  saveReference = true
  max_memory = 64.GB
  max_cpus = 20
  max_time = 240.h
}
